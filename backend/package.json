{
    "name": "ekopulse-backend",
    "version": "1.0.0",
    "description": "EcoPulse Backend API - Environmental Issue Reporting for Lagos",
    "main": "dist/server.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/server.js",
        "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
        "type-check": "tsc --noEmit",
        "seed:agencies": "ts-node src/scripts/seedAgencies.ts",
        "seed:issues": "ts-node src/scripts/seedIssueReports.ts"
    },
    "keywords": [
        "environmental",
        "reporting",
        "lagos",
        "api",
        "typescript"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@clerk/clerk-sdk-node": "^4.13.14",
        "cloudinary": "^1.41.0",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "helmet": "^7.1.0",
        "joi": "^17.11.0",
        "mongoose": "^8.0.3",
        "multer": "^1.4.5-lts.1",
        "nodemailer": "^7.0.5",
        "socket.io": "^4.7.4"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/multer": "^1.4.11",
        "@types/node": "^20.10.5",
        "@types/nodemailer": "^6.4.17",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3"
    }
}
